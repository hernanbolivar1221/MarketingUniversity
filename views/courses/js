        function addBonusClass(){
            $(".navbar").hide();
            $(document).ready(function(){

                $("#footerContainer").hide();

                $(".text_button_bonus").removeClass("hidden");
            });
            $("*").addClass('bonus');
        }
        var bonus = "{{ request.session.bonus}}";
        bonus == "True" ? addBonusClass() : bonus = "False";
         
