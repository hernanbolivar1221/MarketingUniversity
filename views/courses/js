        function hideF_H(){
            $("nav").hide();
            var interval = setInterval(function(){
                $("#footer").hide();
                if($("#footer").length > 0){
                    clearInterval($(this));
                }
                }, 3000 );
            $("#footer").addClass("hidden");
        } 
        location.href.split('hideF_H').length > 1 ? hideF_H():null;
	</script>
